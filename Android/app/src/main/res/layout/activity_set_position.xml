<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.kawakawaplanning.onenightwerewolf.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/Theme.AppCompat.Light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <net.kianoni.fontloader.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Werewolf"
                    app:fontFile="mplus-1c-light.ttf"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginTop="16dp" />

                <net.kianoni.fontloader.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Seer"
                    app:fontFile="mplus-1c-light.ttf"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginTop="16dp" />

                <net.kianoni.fontloader.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Robber"
                    app:fontFile="mplus-1c-light.ttf"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginTop="16dp"/>

                <net.kianoni.fontloader.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Minion"
                    app:fontFile="mplus-1c-light.ttf"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginTop="16dp" />

                <net.kianoni.fontloader.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Tanner"
                    app:fontFile="mplus-1c-light.ttf"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginTop="16dp" />

                <net.kianoni.fontloader.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Villager"
                    app:fontFile="mplus-1c-light.ttf"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <net.kianoni.fontloader.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    app:fontFile="mplus-1c-regular.ttf"
                    android:textColor="@color/textColorPrimary"
                    android:id="@+id/werewolfTv"
                    android:layout_marginTop="18dp" />

                <net.kianoni.fontloader.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    app:fontFile="mplus-1c-regular.ttf"
                    android:textColor="@color/textColorPrimary"
                    android:id="@+id/seerTv"
                    android:layout_marginTop="16dp" />

                <net.kianoni.fontloader.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    app:fontFile="mplus-1c-regular.ttf"
                    android:textColor="@color/textColorPrimary"
                    android:id="@+id/robberTv"
                    android:layout_marginTop="16dp" />

                <net.kianoni.fontloader.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    app:fontFile="mplus-1c-regular.ttf"
                    android:textColor="@color/textColorPrimary"
                    android:id="@+id/minionTv"
                    android:layout_marginTop="16dp" />

                <net.kianoni.fontloader.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    app:fontFile="mplus-1c-regular.ttf"
                    android:textColor="@color/textColorPrimary"
                    android:id="@+id/tannerTv"
                    android:layout_marginTop="16dp" />

                <net.kianoni.fontloader.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    app:fontFile="mplus-1c-regular.ttf"
                    android:textColor="@color/textColorPrimary"
                    android:id="@+id/villagerTv"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dsb_max="2"
                    app:dsb_min="1"
                    android:id="@+id/werewolfSb"
                    android:layout_marginTop="14dp" />

                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dsb_max="2"
                    app:dsb_min="0"
                    android:id="@+id/seerSb"
                    android:layout_marginTop="13dp" />

                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dsb_max="1"
                    app:dsb_min="0"
                    android:id="@+id/robberSb"
                    android:layout_marginTop="13dp" />

                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dsb_max="2"
                    app:dsb_min="0"
                    android:id="@+id/minionSb"
                    android:layout_marginTop="13dp" />

                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dsb_max="2"
                    app:dsb_min="0"
                    android:id="@+id/tannerSb"
                    android:layout_marginTop="13dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="NEXT"
        android:id="@+id/button"
        android:background="@drawable/next_btn_back"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="16dp" />

</LinearLayout>
